<node name="/" xmlns:doc="http://www.freedesktop.org/dbus/1.0/doc.dtd">
  <interface name="org.freedesktop.portal.Updates">
    <!--
        InstallUpdate:
        @parent_window: Identifier for the application window, see <link linkend="parent_window">Common Conventions</link>
        @options: Vardict with optional further information
        @handle: Object path for the #org.freedesktop.portal.Request object representing this call

        Asks to install an update of the calling app.

        Supported keys in the @options vardict include:
        <variablelist>
          <varlistentry>
            <term>handle_token s</term>
            <listitem><para>
              A string that will be used as the last element of the @handle. Must be a valid
              object path element. See the #org.freedesktop.portal.Request documentation for
              more information about the @handle.
            </para></listitem>
          </varlistentry>
        </variablelist>

      The returned object implements the org.freedesktop.portal.Request and the org.freedesktop.portal.Updates.Update interfaces and will
      emit #org.freedesktop.portal.Updates.Update::Progress and
      #org.freedesktop.portal.Request::Response signals.
    -->
    <method name="InstallUpdate">
      <arg type="s" name="parent_window" direction="in"/>
      <arg type="a{sv}" name="options" direction="in"/>
      <arg type="o" name="handle" direction="out"/>
    </method>

    <method name="CreateUpdateMonitor">
      <arg type="a{sv}" name="options" direction="in"/>
      <arg type="o" name="handle" direction="out"/>
    </method>

    <!--
      Progress:
      @handle: the handle of the Request
      @info: More information about the update progress

      Gets emitted to indicate progress of the installation.
    -->
    <signal name="Progress">
      <arg type="o" name="handle" direction="out"/>
      <arg type="a{sv}" name="info" direction="out"/>
    </signal>

    <property name="version" type="u" access="read"/>
  </interface>

  <interface name="org.freedesktop.portal.Updates.Monitor">
    <signal name="UpdateAvailable">
      <arg type="a{sv}" name="update_info" direction="out"/>
    </signal>
  </interface>
</node>
