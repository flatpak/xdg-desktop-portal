<node name="/" xmlns:doc="http://www.freedesktop.org/dbus/1.0/doc.dtd">
  <!--
      org.freedesktop.impl.portal.CredentialsX:
      @short_description: Credentials portal backend interface

      The Credentials portal allows sandboxed applications to retrieve
      web credentials.
  -->
  <interface name="org.freedesktop.impl.portal.CredentialsX">
    <!--
        SelectCredential:
        @handle: Object path for the :ref:`org.freedesktop.impl.portal.Request` object representing this call
        @app_id: App id of the application
        @parent_window: Identifier for the application window, see :doc:`window-identifiers`
        @request_id: ID for the request.
        @request_type: Type of credential ceremony. One of ["CreatePassword", "CreatePublicKey", "GetCredential"].
        @requestor_id: Third-party service requesting the credential.
        @options: Vardict with optional further information
        @response: Vardict with the results of the call

        Presents a print dialog to the user and returns print settings
        and page setup.

        Supported keys in the @options vardict:

        * ``requestor_name`` (``s``)

          The human-readable name of the requestor, suitable for display.

    -->
    <method name="SelectCredential">
      <arg type="o" name="handle" direction="in"/>
      <arg type="s" name="app_id" direction="in"/>
      <arg type="s" name="parent_window" direction="in"/>
      <arg type="s" name="request_id" direction="in"/>
      <arg type="s" name="request_type" direction="in"/>
      <arg type="u" name="requestor_id" direction="in"/>
      <annotation name="org.qtproject.QtDBus.QtTypeName.In6" value="QVariantMap"/>
      <arg type="a{sv}" name="options" direction="in"/>
      <annotation name="org.qtproject.QtDBus.QtTypeName.Out0" value="QVariantMap"/>
      <arg type="a{sv}" name="response" direction="out"/>
    </method>

    <!--
        GetClientCapabilities:

        Returns a set of boolean flags indicating what features
        this API supports.

        See the WebAuthn spec for meanings of the client
        capability keys.
    -->
    <method name="GetClientCapabilities">
      <!--
          Response:
          @conditional_create: Whether conditional mediation is
          supported for credential registration.
          @conditional_get: Whether conditional mediation is
          supported for authentication.
          @hybrid_transport: Whether hybrid authenticators are
          supported.
          @passkey_platform_authenticator: Whether a passkey
          platform authenticator (local or via hybrid transport) is
          accessible via this API.
          @user_verifying_platform_authenticator: Whether a
          user-verifying platform authenticator is available via
          this API.
          @related_origins: Whether matching origins using WebAuthn
          Related Origin Requests is supported.
          @signal_all_accepted_credentials: Whether WebAuthn
          signalAllAcceptedCredentials() is supported.
          @signal_current_user_details: Whether WebAuthn
          signalCurrentUserDetails() is supported.
          @signal_unknown_credential: The WebAuthn Client supports
          signalUnknownCredential().
      -->
      <annotation name="org.qtproject.QtDBus.QtTypeName.Out1" value="QVariantMap"/>
      <arg type="a{sv}" name="capabilities" direction="out"/>
    </method>
    <property name="version" type="u" access="read"/>
  </interface>
</node>
